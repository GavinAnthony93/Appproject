<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnMainFind"
            android:layout_width="128dp"
            android:layout_height="36dp"
            android:text="Find User" />

        <Button
            android:id="@+id/BtnMainAddUser"
            android:layout_width="131dp"
            android:layout_height="36dp"
            android:text="Add User" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/EditFodevare"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Indtast Fodevare"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/EditUnit"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Unit"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/BtnMainAddList"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:text="Add To List" />

    <ListView
        android:id="@+id/List"
        android:layout_width="match_parent"
        android:layout_height="210dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/BtnMainDetailStatus"
            android:layout_width="237dp"
            android:layout_height="42dp"
            android:text="Detailed Status" />

        <Button
            android:id="@+id/BtnMainStatus"
            android:layout_width="166dp"
            android:layout_height="39dp"
            android:text="Status" />

    </LinearLayout>


    <EditText
        android:id="@+id/EditMainName"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EditMainHeight"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Height"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/EditMainWeight"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Weight" />

</LinearLayout>
